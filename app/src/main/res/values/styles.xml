
<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="MyToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:background">@drawable/toolbar_background</item>
        <item name="android:paddingHorizontal">@dimen/padding_content_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#21000000</item>
        <item name="android:paddingTop">84dp</item>
        <item name="android:paddingBottom">55dp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">14</item>
        <item name="android:shadowRadius">9</item>
        <item name="android:elevation">9dp</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="navigationIconTint">@color/app_bar_text_color</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/app_bar_text_color</item>
        <item name="titleTextAppearance">@style/MyToolbarTextStyle</item>
    </style>

    <style name="MyDmSansTextStyle">
        <item name="fontFamily">@font/dmsans</item>
    </style>
    <style name="MyDmSansTextStyle.Bold">
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="MyToolbarTextStyle" parent="MyDmSansTextStyle.Bold">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="MyListHeaderStyle" parent="MyDmSansTextStyle.Bold">
        <item name="android:background">#F5F5F5</item>
        <item name="android:paddingHorizontal">@dimen/padding_content_horizontal</item>
        <item name="android:paddingVertical">@dimen/padding_title_vertical</item>
        <item name="android:textColor">#888A9D</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">25sp</item>
    </style>

    <style name="MyDiseaseItemNameStyle" parent="MyDmSansTextStyle">
        <item name="android:textColor">#3A3A3A</item>
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">23sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="MyNearbyTitleStyle" parent="MyDmSansTextStyle">
        <item name="android:textColor">#8E8F9C</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="MyNearbyItemNameStyle" parent="MyDmSansTextStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">17sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

</resources>